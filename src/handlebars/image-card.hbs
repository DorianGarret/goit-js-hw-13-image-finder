{{#each this}}
    <li class='list-group-item'>
        <div class='card'>
            <img
                src={{webformatURL}}
                class='card-img-top'
                alt={{tags}}
                style='width: 100%; height: 12.5rem;'
            />
            <div class='card-body d-flex justify-content-between'>
                <p class='text-center'>
                    <i class='material-icons'>thumb_up</i>
                    <span class='badge bg-primary rounded-pill'>{{likes}}</span>
                </p>
                <p class='text-center'>
                    <i class='material-icons'>visibility</i>
                    <span class='badge bg-primary rounded-pill'>{{views}}</span>
                </p>
                <p class='text-center'>
                    <i class='material-icons'>comment</i>
                    <span class='badge bg-primary rounded-pill'>{{comments}}</span>
                </p>
                <p class='text-center'>
                    <i class='material-icons'>cloud_download</i>
                    <span class='badge bg-primary rounded-pill'>{{downloads}}</span>
                </p>
            </div>
        </div>
    </li>
{{/each}}